#
# Common configuration file
#
# @author	Mykola Odnosumov
# @date		2019-03-26

# Tilix related
if [ $TILIX_ID ] || [ $VTE_VERSION ]; then
	source /etc/profile.d/vte.sh;
fi

# History
export HISTFILESIZE=10000;
alias h='history';

# Custom Variables
export MAIL="modnosum@gmail.com";
export EDITOR=vim;
export VISUAL=$EDITOR;
if [[ -d $HOME/.brew ]]; then
	export PATH=$HOME/.brew/bin:$PATH;
fi

# Pip-related
export PATH=$HOME/.local/bin:$PATH;

# Cleaning Files
export CLEAN_DEPTH=4;
alias clean='find . -maxdepth $CLEAN_DEPTH -type f \( -name "*~" -o -name "#*#" \) -print -delete 2> /dev/null';

alias la='ls -al';
alias l='la';
alias ll='ls -l';
alias lh='ls -al --ignore="[A-Za-z]*"';

# Opening Files
if command -v xdg-open &> /dev/null; then
	alias op='xdg-open';
	XDG_OPEN_ENABLED=1;
elif command -v open &> /dev/null; then
	alias op='open';
	OPEN_ENABLED=1;
fi

# 42 Related
alias 42='bash $HOME/.42FileChecker/42FileChecker.sh';

# Configuration related
alias re_rc='source $HOME/.${SHELL}rc';
alias ed_rc='$EDITOR $HOME/.${SHELL}rc';

# CMake related
alias ccmake='rm -fr CMakeFiles CMakeCache.txt cmake_install.txt Makefile';

# Repo (source.android.com tool) related
if [ -d "${HOME}/bin" ]; then
	export PATH="${HOME}/bin:${PATH}";
fi
